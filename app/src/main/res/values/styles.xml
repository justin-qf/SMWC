<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/grayTextColor</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!--  <item name="android:windowTranslucentStatus">true</item>
          <item name="android:windowTranslucentNavigation">false</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="LoginTextInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="dashboardViewStyle">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="newDashboardViewStyle">
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="dashboardTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="dashboardSidebarImageStyle">

        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_1sdp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="CommonInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="CommonTextStyle">
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CommonNewTextStyle">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textFiled_colour</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CommonSecondTextStyle">
        <item name="android:layout_height">@dimen/_37sdp</item>
        <item name="android:layout_width">@dimen/_37sdp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:background">@drawable/background_otp_active</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CommonOtpStyle">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="CommonTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/form_field_corner_radius</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_5sdp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkBlueSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="spinnerEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="dropDownListViewStyle">@style/dropDownList</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="newSpinnerEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="dropDownListViewStyle">@style/dropDownList</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
