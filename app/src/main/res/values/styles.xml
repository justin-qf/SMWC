        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="dropDownList">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">@font/muli_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/userIconColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="tableTextStyle">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/outline_white_ract</item>
        <item name="android:fontFamily">@font/muli_extra_old</item>
        <item name="android:maxWidth">@dimen/_120sdp</item>
        <item name="android:minWidth">@dimen/_120sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textLayoutForDescription" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/grayTextColor</item>
        <item name="boxCornerRadiusTopStart">@dimen/_2sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_2sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_2sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_2sdp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.4dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/redColor</item>
        <item name="helperTextTextAppearance">@style/helperTextAppearance</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">match_parent</item>
        <!--    <item name="android:background">@drawable/toolbar_background</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:title" />
        <item name="android:layout_marginStart">-5dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>

        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>


    <style name="toolbarTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/muli_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
    </style>

    <style name="helperTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/redColor</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="helperTextTextColor">@color/redColor</item>
    </style>

    <style name="commonTextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="background">@color/colorWhite</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>

