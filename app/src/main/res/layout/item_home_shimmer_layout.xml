<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_18sdp"
            android:background="@drawable/bg_corner_radius_shimmer" />

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_corner_radius_shimmer" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_corner_radius_shimmer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_105sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:focusable="true"
                card_view:cardBackgroundColor="@color/simmerColor"
                card_view:cardCornerRadius="@dimen/_7sdp"
                card_view:cardElevation="@dimen/_7sdp"
                card_view:cardPreventCornerOverlap="true" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_105sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:focusable="true"
                card_view:cardBackgroundColor="@color/simmerColor"
                card_view:cardCornerRadius="@dimen/_7sdp"
                card_view:cardElevation="@dimen/_7sdp"
                card_view:cardPreventCornerOverlap="true" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_corner_radius_shimmer" />

        <include layout="@layout/item_order_shimmer_layout" />

        <include layout="@layout/item_order_shimmer_layout" />

        <include layout="@layout/item_order_shimmer_layout" />

        <include layout="@layout/item_order_shimmer_layout" />

        <include layout="@layout/item_order_shimmer_layout" />

        <include layout="@layout/item_order_shimmer_layout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>