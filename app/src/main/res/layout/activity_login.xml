<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LoginActivity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/home_complete_bg"
                android:visibility="gone"
                app:elevation="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/splash_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                style="@style/commonTextStyle"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="fill"
                android:layout_marginTop="@dimen/_50sdp"
                android:text="@string/email_mobile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailNoLayout"
                style="@style/CommonInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailNoEdt"
                    style="@style/CommonTextInputEditTextStyle"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_mobile"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/getOtpBtn"
                android:layout_width="@dimen/_123sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/get_otp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:buttonColor="@color/btn_colour"
                android:textSize="@dimen/_11sdp"
                app:cornerRadius="@dimen/_7sdp"
                app:glowColor="@color/btn_colour"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:pressedGlowSize="@dimen/_3sdp"
                app:unpressedGlowSize="@dimen/_3sdp" />

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/getOtpBtns"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:elevation="@dimen/_5sdp"
                android:fontFamily="@font/rubik_bold"
                android:paddingTop="@dimen/_3sdp"
                android:stateListAnimator="@null"
                android:text="@string/get_otp"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp"
                android:translationZ="@dimen/_5sdp"
                app:backgroundTint="@color/btn_colour"
                app:cornerRadius="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/rubik_regular"
                android:gravity="bottom"
                android:text="Don't have an account?"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintStart_toEndOf="@+id/iv_logo"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/rubik_semi_bold"
                android:includeFontPadding="false"
                android:text="@string/sign_up_title"
                android:textColor="@color/btn_colour"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                app:fontWeight="1000"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintStart_toEndOf="@+id/iv_logo"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>