<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".Activity.SignUpActivity.SignUpActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/main_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_20sdp"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyNameLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyNameEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_company_name"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_email" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyEmailLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyEmailEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_company_email"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_mobile_no" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyMobileLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyMobileEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_company_mobile_no"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_address" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyAddressLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyAddressEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="top|start"
                        android:hint="@string/hint_company_address"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:minLines="2"
                        android:paddingBottom="@dimen/_20sdp"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_city" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyCityLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyCityEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_company_city"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/zip_code" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zipCodeLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/zipCodeLayoutEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_zip_code"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.sanojpunchihewa.glowbutton.GlowButton
                    android:id="@+id/getOtpBtn"
                    android:layout_width="@dimen/_120sdp"
                    style="@style/commonShadowButtonStyle"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/submit" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/getOtpBtns"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:elevation="@dimen/_3sdp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11sdp"
                    android:translationZ="@dimen/_5sdp"
                    android:visibility="gone"
                    app:backgroundTint="@color/btn_colour"
                    app:cornerRadius="@dimen/_7sdp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>