<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/mainLayout"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".Activity.SignUpActivity.SignUpActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:paddingBottom="@dimen/_20sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_118sdp"
                    android:background="@drawable/profile_bg"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_left_shap" />

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bottom_round_shap" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/top_left_shap" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/toolbar"
                            layout="@layout/edit_toolbar" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/iv_edit"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_icon"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white" />

                            <ImageView
                                android:id="@+id/iv_submit"
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:background="@drawable/bg_profile_radius_black"
                                android:padding="@dimen/_3sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/camera"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_edit"
                                app:layout_constraintEnd_toEndOf="@+id/iv_edit" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameEdt"
                        android:hint="@string/hint_name"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/last_name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastNameLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastNameEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_last_name"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/email_mobile" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailMobileLayout"
                    style="@style/CommonInputLayoutStyle"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailMobileEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email_mobile"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyNameLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyNameEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_company_name"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_email" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyEmailLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyEmailEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_company_email"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_mobile_no" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyMobileLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyMobileEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_company_mobile_no"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_address" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyAddressLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyAddressEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_company_address"
                        android:layout_height="fill_parent"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:minLines="2"
                        android:paddingBottom="@dimen/_20sdp"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/company_city" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyCityLayout"
                    style="@style/CommonInputLayoutStyle"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyCityEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:hint="@string/hint_company_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/commonTextStyle"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp"
                    android:text="@string/zip_code" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zipCodeLayout"
                    style="@style/CommonInputLayoutStyle"
                    android:layout_width="match_parent"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/zipCodeLayoutEdt"
                        style="@style/CommonTextInputEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_zip_code"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


